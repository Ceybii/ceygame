---
interface Props {
  title?: string;
  message: string;
  retry?: boolean;
}

const { title = 'Bir Hata Olu≈ütu', message, retry = false } = Astro.props;
---

<div class="bg-red-500/10 border border-red-500/50 rounded-lg p-6 text-center">
  <svg class="w-12 h-12 mx-auto text-red-500 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
  </svg>
  <h3 class="text-xl font-semibold text-white mb-2">{title}</h3>
  <p class="text-gray-300 mb-4">{message}</p>
  {retry && (
    <button
      onclick="window.location.reload()"
      class="px-6 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg font-semibold transition-colors"
    >
      Tekrar Dene
    </button>
  )}
</div>

