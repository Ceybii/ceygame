---
import { SITE_CONFIG } from '@lib/config';
import ThemeToggle from './ThemeToggle.astro';

const currentPath = Astro.url.pathname;
---

<header class="sticky top-0 z-50 w-full border-b border-dark-border bg-dark-surface/80 backdrop-blur-md">
  <nav class="container mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex items-center">
        <img src="/logo.png" alt="Ceygame" class="h-14 md:h-16 w-auto hover:opacity-80 transition-opacity" />
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        {SITE_CONFIG.navigation.map((item) => (
          <a
            href={item.href}
            class={`hover:text-accent transition-colors ${
              currentPath === item.href ? 'text-accent font-semibold' : 'text-gray-300'
            }`}
          >
            {item.name}
          </a>
        ))}
      </div>

      <!-- CTA + Theme Toggle + Mobile Menu Button -->
      <div class="flex items-center space-x-3">
        <a
          href={SITE_CONFIG.social.youtube}
          target="_blank"
          rel="noopener noreferrer"
          class="hidden sm:inline-flex items-center px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg font-semibold transition-colors"
        >
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
          </svg>
          Abone Ol
        </a>

        <!-- Theme Toggle -->
        <ThemeToggle />

        <!-- Mobile menu button -->
        <button
          id="mobile-menu-button"
          class="md:hidden p-2 rounded-lg hover:bg-dark-border transition-colors"
          aria-label="MenÃ¼"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden pt-4 pb-2">
      <div class="flex flex-col space-y-3">
        {SITE_CONFIG.navigation.map((item) => (
          <a
            href={item.href}
            class={`px-3 py-2 rounded-lg hover:bg-dark-border transition-colors ${
              currentPath === item.href ? 'text-accent font-semibold bg-dark-border' : 'text-gray-300'
            }`}
          >
            {item.name}
          </a>
        ))}
        <a
          href={SITE_CONFIG.social.youtube}
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center justify-center px-3 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg font-semibold transition-colors"
        >
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
          </svg>
          Abone Ol
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');

  button?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>

