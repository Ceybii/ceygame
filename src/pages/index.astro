---
import BaseLayout from '@layouts/BaseLayout.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import Hero from '@components/Hero.astro';
import { SITE_CONFIG } from '@lib/config';
import { getOrganizationSchema, getWebsiteSchema } from '@lib/seo';

const jsonLd = [
  getOrganizationSchema(SITE_CONFIG.url),
  getWebsiteSchema(SITE_CONFIG.url)
];
---

<BaseLayout jsonLd={jsonLd}>
  <Header />
  
  <main>
    <!-- Hero Section -->
    <Hero />

    <!-- Latest Videos Section -->
    <section class="container mx-auto px-4 py-16">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold text-white mb-4">Son Videolar</h2>
        <p class="text-gray-400 max-w-2xl mx-auto">
          En yeni içeriklerimizi keşfedin. FPS oyunlarında taktikler, highlight'lar ve daha fazlası.
        </p>
      </div>

      <div id="latest-videos-container">
        <!-- Videos will be loaded here via client-side JS -->
        <div class="flex justify-center py-12">
          <div class="relative w-16 h-16">
            <div class="absolute top-0 left-0 w-full h-full border-4 border-accent/20 rounded-full"></div>
            <div class="absolute top-0 left-0 w-full h-full border-4 border-accent border-t-transparent rounded-full animate-spin"></div>
          </div>
        </div>
      </div>

      <div class="text-center mt-12">
        <a
          href="/videos"
          class="inline-flex items-center px-8 py-3 bg-accent hover:bg-accent-dark text-dark-bg rounded-lg font-semibold transition-all hover:scale-105"
        >
          Tüm Videoları Görüntüle
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
          </svg>
        </a>
      </div>
    </section>

    <!-- Playlists Section (Dynamic) -->
    <section class="bg-dark-surface py-16">
      <div class="container mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-4xl font-bold text-white mb-4">Oynatma Listeleri</h2>
          <p class="text-gray-400 max-w-2xl mx-auto">
            Tüm oynatma listelerim - Yeni eklenenler otomatik görünür!
          </p>
        </div>

        <div id="playlists-container">
          <!-- Playlists will be loaded here via client-side JS -->
          <div class="flex justify-center py-12">
            <div class="relative w-16 h-16">
              <div class="absolute top-0 left-0 w-full h-full border-4 border-accent/20 rounded-full"></div>
              <div class="absolute top-0 left-0 w-full h-full border-4 border-accent border-t-transparent rounded-full animate-spin"></div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Why Ceygame Section -->
    <section class="container mx-auto px-4 py-16">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold text-white mb-4">Neden Ceygame?</h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center p-6">
          <div class="w-16 h-16 bg-accent/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-white mb-2">FPS Uzmanı</h3>
          <p class="text-gray-400">Valorant, CS2 ve diğer FPS oyunlarında uzman içerikler</p>
        </div>

        <div class="text-center p-6">
          <div class="w-16 h-16 bg-accent/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-white mb-2">Taktik ve Stratejiler</h3>
          <p class="text-gray-400">Pro oyuncuların kullandığı taktikler ve ipuçları</p>
        </div>

        <div class="text-center p-6">
          <div class="w-16 h-16 bg-accent/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-white mb-2">Highlight'lar</h3>
          <p class="text-gray-400">En iyi anlar, clutch'lar ve muhteşem oyun anları</p>
        </div>

        <div class="text-center p-6">
          <div class="w-16 h-16 bg-accent/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-white mb-2">Aktif Topluluk</h3>
          <p class="text-gray-400">Binlerce oyuncudan oluşan canlı ve destekleyici topluluk</p>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="bg-gradient-to-r from-accent/20 via-primary-600/20 to-accent/20 py-16">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-4xl font-bold text-white mb-4">Topluluğumuza Katıl</h2>
        <p class="text-gray-300 mb-8 max-w-2xl mx-auto">
          YouTube'da abone ol, forumumuza katıl ve diğer oyuncularla etkileşime geç!
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href={SITE_CONFIG.social.youtube}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-8 py-3 bg-red-600 hover:bg-red-700 text-white rounded-lg font-semibold transition-all hover:scale-105"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
            </svg>
            YouTube'da Abone Ol
          </a>
          <a
            href="/forum"
            class="inline-flex items-center px-8 py-3 bg-dark-surface hover:bg-dark-border border-2 border-accent text-white rounded-lg font-semibold transition-all hover:scale-105"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"/>
            </svg>
            Forum'a Katıl
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<script>
  import { fetchLatestVideos } from '@lib/youtube';
  import { SITE_CONFIG } from '@lib/config';

  async function loadVideos() {
    const container = document.getElementById('latest-videos-container');
    if (!container) return;

    try {
      const videos = await fetchLatestVideos(
        SITE_CONFIG.youtube.apiKey,
        SITE_CONFIG.youtube.channelId,
        8 // Show 8 videos on home page
      );

      // Create video grid
      const grid = document.createElement('div');
      grid.className = 'grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6';

      videos.forEach((video) => {
        const card = document.createElement('a');
        card.href = `/videos/${video.id}`;
        card.className = 'group block bg-dark-surface rounded-lg overflow-hidden hover:ring-2 hover:ring-accent transition-all duration-300 hover:scale-[1.02]';

        card.innerHTML = `
          <div class="relative aspect-video overflow-hidden bg-dark-border">
            <img
              src="${video.thumbnail}"
              alt="${video.title}"
              loading="lazy"
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
            />
            ${video.duration ? `<div class="absolute bottom-2 right-2 bg-black/80 text-white text-xs font-semibold px-2 py-1 rounded">${video.duration}</div>` : ''}
            <div class="absolute inset-0 flex items-center justify-center bg-black/0 group-hover:bg-black/30 transition-colors">
              <svg class="w-16 h-16 text-white opacity-0 group-hover:opacity-100 transition-opacity" fill="currentColor" viewBox="0 0 24 24">
                <path d="M8 5v14l11-7z"/>
              </svg>
            </div>
          </div>
          <div class="p-4">
            <h3 class="font-semibold text-white line-clamp-2 mb-2 group-hover:text-accent transition-colors">${video.title}</h3>
            <div class="flex items-center justify-between text-sm text-gray-400">
              <span>${new Date(video.publishedAt).toLocaleDateString('tr-TR')}</span>
              ${video.viewCount ? `<span class="flex items-center"><svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/></svg>${video.viewCount}</span>` : ''}
            </div>
          </div>
        `;

        grid.appendChild(card);
      });

      container.innerHTML = '';
      container.appendChild(grid);
    } catch (error) {
      console.error('Failed to load videos:', error);
      container.innerHTML = `
        <div class="bg-red-500/10 border border-red-500/50 rounded-lg p-6 text-center">
          <p class="text-gray-300 mb-4">Videolar yüklenirken bir hata oluştu. Lütfen daha sonra tekrar deneyin.</p>
          <button onclick="window.location.reload()" class="px-6 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg font-semibold transition-colors">Tekrar Dene</button>
        </div>
      `;
    }
  }

  // Load playlists
  async function loadPlaylists() {
    const container = document.getElementById('playlists-container');
    if (!container) return;

    try {
      const { fetchChannelPlaylists } = await import('@lib/youtube');
      
      const playlists = await fetchChannelPlaylists(
        SITE_CONFIG.youtube.apiKey,
        SITE_CONFIG.youtube.channelId,
        50 // Tüm playlists'leri çek
      );

      // Create playlists grid
      const grid = document.createElement('div');
      grid.className = 'grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6';

      playlists.forEach((playlist) => {
        const card = document.createElement('a');
        card.href = `https://www.youtube.com/playlist?list=${playlist.id}`;
        card.target = '_blank';
        card.rel = 'noopener noreferrer';
        card.className = 'group bg-dark-bg rounded-lg overflow-hidden hover:ring-2 hover:ring-accent transition-all hover:scale-105';

        card.innerHTML = `
          <div class="relative aspect-video overflow-hidden bg-dark-border">
            <img
              src="${playlist.thumbnail}"
              alt="${playlist.title}"
              loading="lazy"
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
            />
            <div class="absolute bottom-2 right-2 bg-black/80 text-white text-xs font-semibold px-2 py-1 rounded flex items-center">
              <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2 6a2 2 0 012-2h6a2 2 0 012 2v8a2 2 0 01-2 2H4a2 2 0 01-2-2V6zM14.553 7.106A1 1 0 0014 8v4a1 1 0 00.553.894l2 1A1 1 0 0018 13V7a1 1 0 00-1.447-.894l-2 1z"/>
              </svg>
              ${playlist.itemCount} video
            </div>
          </div>
          <div class="p-4">
            <h3 class="font-semibold text-white line-clamp-2 mb-2 group-hover:text-accent transition-colors">${playlist.title}</h3>
            ${playlist.description ? `<p class="text-sm text-gray-400 line-clamp-2">${playlist.description}</p>` : ''}
          </div>
        `;

        grid.appendChild(card);
      });

      container.innerHTML = '';
      container.appendChild(grid);
    } catch (error) {
      console.error('Failed to load playlists:', error);
      container.innerHTML = `
        <div class="bg-yellow-500/10 border border-yellow-500/50 rounded-lg p-6 text-center">
          <p class="text-gray-300">Oynatma listeleri yüklenemedi. Daha sonra tekrar deneyin.</p>
        </div>
      `;
    }
  }

  // Load videos and playlists on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      loadVideos();
      loadPlaylists();
    });
  } else {
    loadVideos();
    loadPlaylists();
  }
</script>

